    "version": "0.2.0",
    "configurations": [
        {
            "name": "https (default)",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/MessageHub.csproj",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}/swagger"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "args": ["--launch-profile", "https"],
            "preLaunchTask": "kill-existing-processes"
        },
        {
            "name": "http",
            "type": "dotnet",
            "request": "launch", 
            "projectPath": "${workspaceFolder}/MessageHub.csproj",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "args": ["--launch-profile", "http"],
            "preLaunchTask": "kill-existing-processes"
        }
    ]
}